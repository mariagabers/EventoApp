<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventoApp.MainPage"
             Title="Cadastro de Evento">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Cadastro de Evento" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Nome do Evento:" FontSize="18" />
            <Entry x:Name="nomeEntry" Placeholder="Digite o nome do evento" />

            <Label Text="Data de Início:" FontSize="18" />
            <DatePicker x:Name="dataInicioPicker" Format="dd/MM/yyyy" />

            <Label Text="Data de Término:" FontSize="18" />
            <DatePicker x:Name="dataTerminoPicker" Format="dd/MM/yyyy" />

            <Label Text="Número de Participantes:" FontSize="18" />
            <Entry x:Name="participantesEntry" Placeholder="Digite o número de participantes" Keyboard="Numeric" />

            <Label Text="Local do Evento:" FontSize="18" />
            <Entry x:Name="localEntry" Placeholder="Digite o local do evento" />

            <Label Text="Custo por Participante (R$):" FontSize="18" />
            <Entry x:Name="custoEntry" Placeholder="Digite o valor (R$)" Keyboard="Numeric" />

            <Button Text="Cadastrar" Clicked="OnCadastrarClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
